<!--pages/text/text.wxml-->
<!--1.基本使用-->
<text>hello world\n</text>
<text>你好，小程序\n</text>

<!--2.selecttable:true-->
<!-- 默认情况下text中的文本长按是不能选中的 -->
<text selectable="{{true}}" >hello coderwhy\n</text>
<text selectable >hello coderwhy\n</text>

<!--3.space:决定文本空格的大小 -->
<!-- ensp:半个中文字符大小 -->
<!-- emsp:一个中文字符大小 -->
<text space="nbsp">hello xiangyu\n</text>
<text space="ensp">hello xiangyu\n</text>
<text space="emsp">hello xiangyu \n</text>

<!--4.decode属性：是否解码文本-->
<text decode>5 &gt; 3</text>