<!--pages/view/view.wxml-->

<!--1.view的基本使用-->
<view class='box'>哈哈哈</view>
<view>呵呵呵</view>

<!--2.hover-class-->
<view class="box1"                        hover-class="hover-view"
      hover-stay-time="1000">
	box1</view>

<!--3.hover-stop-propagation阻止本节点的祖先节点出现点击态-->
<view class="box2"                            hover-class='box2-hover'>
  <view class="box1" 
    hover-class="hover-view"
    hover-start-time="{{0}}"
    hover-stop-propagation='{{true}}'>
    box1
  </view>
</view>